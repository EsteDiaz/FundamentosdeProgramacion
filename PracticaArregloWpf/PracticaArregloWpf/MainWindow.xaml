<Window x:Class="PracticaArregloWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticaArregloWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="414" Margin="10,0,0,0" VerticalAlignment="Center" Width="146" d:ItemsSource="{d:SampleData ItemCount=5}" IsSynchronizedWithCurrentItem="False"/>
        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="39" Margin="222,109,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="144"/>
        <Button x:Name="button" Content="Button" HorizontalAlignment="Left" Height="36" Margin="196,232,0,0" VerticalAlignment="Top" Width="98" Click="button_Click"/>
        <Button x:Name="button2" Content="Button" HorizontalAlignment="Left" Height="36" Margin="317,232,0,0" VerticalAlignment="Top" Width="102" Click="button2_Click"/>

    </Grid>
</Window>
